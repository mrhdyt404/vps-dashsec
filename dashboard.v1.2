<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Create update indicator
const updateIndicator = document.createElement('div');
updateIndicator.id = 'updateIndicator';
updateIndicator.style.cssText = `
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: #2a2a3d;
    padding: 10px 15px;
    border-radius: 8px;
    font-size: 12px;
    z-index: 1000;
    border: 1px solid #3498db;
    box-shadow: 0 4px 6px rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    gap: 8px;
`;

// Update dashboard function
async function updateDashboard() {
    try {
        updateIndicator.innerHTML = `
            <i class="fas fa-sync fa-spin" style="color:#3498db"></i>
            <div>
                <div>Updating...</div>
                <div style="font-size:10px; color:#aaaaaa">Fetching latest data</div>
            </div>
        `;
        
        const res = await fetch('data.php?_=' + new Date().getTime());
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        
        const data = await res.json();
        
        if (data.status === 'error') {
            throw new Error(data.message || 'Server error');
        }
        
        // Calculate banned count
        const bannedList = data.banned_list || '';
        const bannedIPs = bannedList.trim() ? bannedList.trim().split(/\s+/) : [];
        const bannedCount = bannedIPs.length;
        
        // Update stat cards
        document.querySelector('.stat-card:nth-child(1) .stat-value').textContent = data.failed_total || 0;
        document.querySelector('.stat-card:nth-child(2) .stat-value').textContent = data.blocked_total || 0;
        document.querySelector('.stat-card:nth-child(3) .stat-value').textContent = bannedCount;
        document.querySelector('.stat-card:nth-child(4) .stat-value').textContent = data.success_total || 0;
        
        // Update percentages
        const failedTotal = data.failed_total || 0;
        const successTotal = data.success_total || 0;
        const totalAttempts = failedTotal + successTotal;
        
        const blockedPercentage = failedTotal > 0 ? 
            ((data.blocked_total || 0) / failedTotal * 100).toFixed(1) : 0;
        const successRate = totalAttempts > 0 ? 
            (successTotal / totalAttempts * 100).toFixed(1) : 0;
        
        document.querySelector('.stat-card:nth-child(2) .stat-trend').innerHTML = 
            `<i class="fas fa-chart-line" style="color:#2ecc71"></i> ${blockedPercentage}% blocked`;
        
        document.querySelector('.stat-card:nth-child(4) .stat-trend').innerHTML = 
            `<i class="fas fa-chart-pie" style="color:#f1c40f"></i> ${successRate}% success rate`;
        
        // Update bar chart
        const bars = [
            { value: data.failed_total || 0, element: document.querySelector('.bar:nth-child(1)') },
            { value: data.blocked_total || 0, element: document.querySelector('.bar:nth-child(2)') },
            { value: data.success_total || 0, element: document.querySelector('.bar:nth-child(3)') },
            { value: bannedCount, element: document.querySelector('.bar:nth-child(4)') }
        ];
        
        const maxValue = Math.max(...bars.map(b => b.value), 1);
        const maxHeight = 120;
        
        bars.forEach((bar, index) => {
            if (bar.element) {
                const height = (bar.value / maxValue) * maxHeight;
                const percentage = Math.round((bar.value / maxValue) * 100);
                
                const barValue = bar.element.querySelector('.bar-value');
                const barPercentage = bar.element.querySelector('.bar-percentage');
                const barTooltip = barValue?.querySelector('div');
                
                if (barValue) barValue.style.height = height + 'px';
                if (barTooltip) barTooltip.textContent = bar.value;
                if (barPercentage) barPercentage.textContent = percentage + '%';
            }
        });
        
        // Update total events
        const totalEventsElement = document.querySelector('.chart-container .bar-chart + div');
        if (totalEventsElement) {
            totalEventsElement.innerHTML = `
                Total Events: <strong>${totalAttempts}</strong>
                | Attack-to-Success Ratio: <strong>${failedTotal > 0 && successTotal > 0 ? 
                    (failedTotal / successTotal).toFixed(1) : failedTotal}:1</strong>
            `;
        }
        
        // Update banned IPs section
        const bannedContainer = document.querySelector('.chart-container:has(.banned-grid)');
        if (bannedCount > 0) {
            if (!bannedContainer) {
                // Create banned section if it doesn't exist
                const chartContainer = document.querySelector('.chart-container');
                if (chartContainer) {
                    const newBannedSection = document.createElement('div');
                    newBannedSection.className = 'chart-container';
                    newBannedSection.innerHTML = `
                        <h3 style="margin-top: 0; margin-bottom: 15px; color: #9b59b6;">
                            <i class="fas fa-shield-alt"></i> Active IP Bans (${bannedCount} IPs)
                        </h3>
                        <p style="margin: 0 0 10px 0; color: #aaaaaa; font-size: 14px;">
                            IP addresses currently blocked by firewall:
                        </p>
                        <div class="banned-grid"></div>
                        <div style="margin-top: 10px; font-size: 11px; color: #aaaaaa;">
                            <i class="fas fa-info-circle"></i> Total: ${bannedCount} IP addresses banned
                        </div>
                    `;
                    chartContainer.insertAdjacentElement('afterend', newBannedSection);
                }
            }
            
            // Update banned grid
            const bannedGrid = document.querySelector('.banned-grid');
            if (bannedGrid) {
                bannedGrid.innerHTML = bannedIPs.map((ip, index) => `
                    <div class="banned-ip-item">
                        <span class="banned-ip-number">#${index + 1}</span>
                        <span>${ip}</span>
                        <i class="fas fa-ban"></i>
                    </div>
                `).join('');
            }
            
            // Update banned count in header
            const bannedHeader = document.querySelector('.chart-container:has(.banned-grid) h3');
            if (bannedHeader) {
                bannedHeader.innerHTML = `<i class="fas fa-shield-alt"></i> Active IP Bans (${bannedCount} IPs)`;
            }
        } else if (bannedContainer) {
            bannedContainer.remove();
        }
        
        // Update top IPs table
        const tbodyIPs = document.querySelector('.table-card:nth-child(1) tbody');
        if (data.top_ips && data.top_ips.length && tbodyIPs) {
            let html = '';
            data.top_ips.forEach(ip => {
                let cls = 'badge-low', txt = 'Low', icon = 'info-circle';
                if (ip.count > 30) {
                    cls = 'badge-high';
                    txt = 'High';
                    icon = 'skull';
                } else if (ip.count > 15) {
                    cls = 'badge-medium';
                    txt = 'Medium';
                    icon = 'exclamation-triangle';
                }
                
                const isBanned = bannedIPs.includes(ip.ip);
                const statusBadge = isBanned 
                    ? '<span class="badge badge-purple"><i class="fas fa-ban"></i> Banned</span>'
                    : '<span class="badge badge-warning"><i class="fas fa-eye"></i> Monitoring</span>';
                
                html += `<tr>
                    <td><i class="fas fa-globe" style="margin-right: 5px; color: #3498db;"></i> ${ip.ip}</td>
                    <td><strong>${ip.count}</strong></td>
                    <td><span class="badge ${cls}"><i class="fas fa-${icon}"></i> ${txt}</span></td>
                    <td><i class="fas fa-flag"></i> ${ip.country || 'Unknown'}</td>
                    <td>${statusBadge}</td>
                </tr>`;
            });
            tbodyIPs.innerHTML = html;
        }
        
        // Update top users table
        const tbodyUsers = document.querySelector('.table-card:nth-child(2) tbody');
        if (data.top_users && data.top_users.length && tbodyUsers) {
            let html = '';
            data.top_users.forEach(user => {
                let cls = 'badge-low', txt = 'Low Risk', icon = 'user';
                
                if (user.user == 'root') {
                    cls = 'badge-high';
                    txt = 'High Risk';
                    icon = 'crown';
                } else if (['admin', 'ubuntu', 'debian'].includes(user.user)) {
                    cls = 'badge-medium';
                    txt = 'Medium Risk';
                    icon = 'exclamation-triangle';
                } else if (user.count > 10) {
                    cls = 'badge-medium';
                    txt = 'Suspicious';
                    icon = 'user-secret';
                }
                
                const ratio = user.count > 0 ? 
                    Math.round((user.count / Math.max(1, failedTotal)) * 1000) / 10 : 0;
                const width = Math.min(100, ratio * 3);
                
                html += `<tr>
                    <td><i class="fas fa-user" style="margin-right: 5px; color: #3498db;"></i> ${user.user}</td>
                    <td><strong>${user.count}</strong></td>
                    <td><span class="badge ${cls}"><i class="fas fa-${icon}"></i> ${txt}</span></td>
                    <td>
                        <div style="display: flex; align-items: center; gap: 8px;">
                            <div style="flex-grow: 1; height: 6px; background: rgba(255,255,255,0.1); border-radius: 3px; overflow: hidden;">
                                <div style="width: ${width}%; height: 100%; background: #e74c3c; border-radius: 3px;"></div>
                            </div>
                            <span style="font-size: 11px; color: #aaaaaa; min-width: 40px;">
                                ${ratio}%
                            </span>
                        </div>
                    </td>
                </tr>`;
            });
            tbodyUsers.innerHTML = html;
        }
        
        // Update footer
        const footerDate = document.querySelector('.footer div:first-child');
        if (footerDate) {
            const now = new Date();
            footerDate.innerHTML = `<i class="fas fa-clock" style="margin-right: 5px;"></i>
            Last update: ${now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`;
        }
        
        // Update indicator
        updateIndicator.innerHTML = `
            <i class="fas fa-check-circle" style="color:#2ecc71"></i>
            <div>
                <div>Updated: ${new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</div>
                <div style="font-size:10px; color:#aaaaaa">Next in 5s</div>
            </div>
        `;
        
    } catch (e) {
        console.error('Error fetching dashboard data:', e);
        updateIndicator.innerHTML = `
            <i class="fas fa-exclamation-triangle" style="color:#e74c3c"></i>
            <div>
                <div>Update failed</div>
                <div style="font-size:10px; color:#aaaaaa">${e.message}</div>
            </div>
        `;
    }
}

// Initialize and start auto-refresh
document.body.appendChild(updateIndicator);
updateDashboard(); // Initial load
setInterval(updateDashboard, 5000); // Update every 5 seconds
</script>
