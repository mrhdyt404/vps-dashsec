// =====================
// Load Dashboard Data with JSON Repair
// =====================
$data = null;
$message = null;
$file = '/opt/log-monitor/auth_summary.json';

if (!is_readable($file)) {
    $message = 'Data log belum tersedia. Pastikan file /opt/log-monitor/auth_summary.json ada dan dapat dibaca.';
} else {
    $jsonContent = file_get_contents($file);
    if ($jsonContent === false) {
        $message = 'Gagal membaca data log. Periksa izin file.';
    } else {
        // Fungsi untuk memperbaiki JSON yang rusak
        function repairJson($json) {
            // Perbaiki issue spesifik: "blocked_total": banned:,
            $json = preg_replace('/"blocked_total":\s*([^,\s\}]+):\s*,/', '"blocked_total": 0,', $json);
            
            // Perbaiki trailing commas
            $json = preg_replace('/,\s*}/', '}', $json);
            $json = preg_replace('/,\s*]/', ']', $json);
            
            // Perbaiki single quotes menjadi double quotes
            $json = preg_replace('/\'/', '"', $json);
            
            return $json;
        }
        
        // Coba decode JSON
        $decoded = json_decode($jsonContent, true);
        
        // Jika gagal, coba perbaiki
        if (json_last_error() !== JSON_ERROR_NONE) {
            $repairedJson = repairJson($jsonContent);
            $decoded = json_decode($repairedJson, true);
            
            if (json_last_error() !== JSON_ERROR_NONE) {
                $message = 'Format data log rusak. Periksa struktur JSON.';
                error_log("JSON Parse Error: " . json_last_error_msg());
            } else {
                $data = $decoded;
            }
        } elseif (empty($decoded)) {
            $message = 'Belum ada aktivitas serangan yang tercatat.';
        } else {
            $data = $decoded;
        }
        
        if ($data) {
            // Pastikan semua field yang diperlukan ada
            $defaults = [
                'failed_total' => 0,
                'blocked_total' => 0,
                'success_total' => 0,
                'top_ips' => [],
                'top_users' => [],
                'banned_list' => '',
                'date' => date('Y-m-d H:i:s')
            ];
            
            $data = array_merge($defaults, $data);
            
            // Validasi dan konversi tipe data
            $data['failed_total'] = intval($data['failed_total']);
            $data['blocked_total'] = intval($data['blocked_total']);
            $data['success_total'] = intval($data['success_total']);
            
            // Pastikan array kosong jika tidak ada data
            if (!is_array($data['top_ips'])) $data['top_ips'] = [];
            if (!is_array($data['top_users'])) $data['top_users'] = [];
            if (!is_string($data['banned_list'])) $data['banned_list'] = '';
        }
    }
}
